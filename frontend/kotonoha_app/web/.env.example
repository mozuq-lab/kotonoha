# kotonoha Web Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (required for AI conversion feature)
# Development: http://localhost:8000
# Production: https://api.your-domain.com
API_BASE_URL=http://localhost:8000

# API Version
API_VERSION=v1

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable AI conversion feature
# Set to 'false' to run in fully offline mode
ENABLE_AI_CONVERSION=true

# Enable/disable analytics (for future use)
ENABLE_ANALYTICS=false

# Debug mode (shows additional logs in console)
DEBUG_MODE=false

# =============================================================================
# PWA Configuration
# =============================================================================

# PWA update strategy: 'auto' | 'manual'
# auto: Automatically update when new version is available
# manual: Prompt user to update
PWA_UPDATE_STRATEGY=auto

# Cache version (increment to force cache refresh)
CACHE_VERSION=1

# =============================================================================
# Deployment Configuration
# =============================================================================

# Base URL path (if not deployed at root)
# Example: /kotonoha/ for https://example.com/kotonoha/
BASE_HREF=/

# Public URL (used for absolute URLs in meta tags)
PUBLIC_URL=https://kotonoha.example.com
